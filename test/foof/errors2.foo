(letrec ((foo (lambda (c)
                (display "Counter: ")
                (display c)
                (newline)
                (foo (raise c)))))
  ;; NOTE Spawned processes do not inherit the error handler.
  (handle (do (spawn (lambda () (foo 0)))
              (spawn (lambda () (foo 100)))
              (foo 200))
          (lambda (e r)
            (task-info)
            (sleep 1000)
            (r (+ 1 e)))))
